import os
import json
from flask import Flask, request, jsonify
from flask_cors import CORS
from google.oauth2 import service_account
from googleapiclient.discovery import build
from googleapiclient.errors import HttpError

app = Flask(__name__)
CORS(app)

# SECURITY: Basic API Key for internal bridge
API_KEY = "partflow_secret_token_2026"

def check_auth():
    auth_header = request.headers.get('X-API-KEY')
    if auth_header != API_KEY:
        return False
    return True

# Path to the JSON key
SERVICE_ACCOUNT_FILE = os.path.join(os.path.dirname(__file__), 'config', 'service-account.json')
SCOPES = ['https://www.googleapis.com/auth/spreadsheets']

def get_sheets_service():
    creds = service_account.Credentials.from_service_account_file(
        SERVICE_ACCOUNT_FILE, scopes=SCOPES)
    return build('sheets', 'v4', credentials=creds)

def ensure_headers(service, spreadsheet_id, sheet_name, headers):
    try:
        # Check if sheet exists
        spreadsheet = service.spreadsheets().get(spreadsheetId=spreadsheet_id).execute()
        sheets = spreadsheet.get('sheets', [])
        sheet_exists = any(s['properties']['title'] == sheet_name for s in sheets)

        if not sheet_exists:
            body = {
                'requests': [{
                    'addSheet': {
                        'properties': {'title': sheet_name}
                    }
                }]
            }
            service.spreadsheets().batchUpdate(spreadsheetId=spreadsheet_id, body=body).execute()

        # Get existing headers
        result = service.spreadsheets().values().get(
            spreadsheetId=spreadsheet_id, range=f"{sheet_name}!A1:Z1").execute()
        
        existing_values = result.get('values', [[]])
        existing_headers = existing_values[0] if existing_values else []

        # If headers are missing or length is different (or specific crucial ones missing), update them
        if not existing_headers or len(existing_headers) < len(headers):
            body = {'values': [headers]}
            service.spreadsheets().values().update(
                spreadsheetId=spreadsheet_id,
                range=f"{sheet_name}!A1",
                valueInputOption='RAW',
                body=body
            ).execute()
            print(f"Updated headers for {sheet_name}")
    except HttpError as err:
        print(f"Error in ensure_headers: {err}")
        raise err

@app.route('/health', methods=['GET'])
def health():
    return jsonify({"status": "ok"})

@app.route('/sync', methods=['POST'])
def sync():
    if not check_auth():
        return jsonify({"success": False, "message": "Unauthorized"}), 401
        
    data = request.json
    spreadsheet_id = data.get('spreadsheetId')
    customers = data.get('customers', [])
    orders = data.get('orders', [])
    items = data.get('items', [])

    if not spreadsheet_id:
        return jsonify({"success": False, "message": "Spreadsheet ID is required"}), 400

    try:
        service = get_sheets_service()

        ensure_headers(service, spreadsheet_id, 'Customers', ['ID', 'Shop Name', 'Address', 'Phone', 'City', 'Discount', 'Status', 'Last Updated'])
        ensure_headers(service, spreadsheet_id, 'Inventory', ['ID', 'Display Name', 'Internal Name', 'SKU', 'Vehicle', 'Brand/Origin', 'Category', 'Unit Value', 'Stock Qty', 'Low Stock Threshold', 'Status', 'Last Updated'])
        ensure_headers(service, spreadsheet_id, 'Orders', ['Order ID', 'Customer ID', 'Rep ID', 'Date', 'Net Total', 'Status', 'Last Updated'])
        ensure_headers(service, spreadsheet_id, 'OrderLines', ['Line ID', 'Order ID', 'Item ID', 'Item Name', 'Qty', 'Unit Price', 'Line Total'])

        # 2. Push Customers
        if customers:
            values = [[c['customer_id'], c['shop_name'], c['address'], c['phone'], c['city_ref'], c['discount_rate'], c['status'], c['updated_at']] for c in customers]
            service.spreadsheets().values().append(
                spreadsheetId=spreadsheet_id, range="Customers!A:H",
                valueInputOption="USER_ENTERED", body={"values": values}
            ).execute()

        # 3. Push Items (New ones)
        if items:
            values = [[i['item_id'], i['item_display_name'], i['item_name'], i['item_number'], i['vehicle_model'], i['source_brand'], i.get('category', 'Uncategorized'), i['unit_value'], i['current_stock_qty'], i.get('low_stock_threshold', 10), i['status'], i['updated_at']] for i in items]
            service.spreadsheets().values().append(
                spreadsheetId=spreadsheet_id, range="Inventory!A:L",
                valueInputOption="USER_ENTERED", body={"values": values}
            ).execute()

        # 4. Push Orders & Lines
        if orders:
            order_values = [[o['order_id'], o['customer_id'], o.get('rep_id', ''), o['order_date'], o['net_total'], o['order_status'], o['updated_at']] for o in orders]
            service.spreadsheets().values().append(
                spreadsheetId=spreadsheet_id, range="Orders!A:G",
                valueInputOption="USER_ENTERED", body={"values": order_values}
            ).execute()

            line_values = []
            for o in orders:
                for l in o.get('lines', []):
                    line_values.append([l['line_id'], o['order_id'], l['item_id'], l['item_name'], l['quantity'], l['unit_value'], l['line_total']])
            
            if line_values:
                service.spreadsheets().values().append(
                    spreadsheetId=spreadsheet_id, range="OrderLines!A:G",
                    valueInputOption="USER_ENTERED", body={"values": line_values}
                ).execute()

        # 5. Pull Inventory
        result = service.spreadsheets().values().get(
            spreadsheetId=spreadsheet_id, range="Inventory!A:Z").execute()
        
        pulled_items = []
        rows = result.get('values', [])
        if len(rows) > 1:
            for row in rows[1:]:
                if not row or not row[0]: continue
                # Pad row with empty strings if columns are missing
                while len(row) < 12: row.append('')
                
                # Dynamic mapping check: If row[8] is not a number, it's likely an old format row
                # We try to parse, and fallback safely
                try:
                    unit_val = float(row[7]) if row[7] else 0
                except (ValueError, TypeError):
                    unit_val = 0

                try:
                    stock_qty = int(row[8]) if row[8] else 0
                except (ValueError, TypeError):
                    stock_qty = 0

                try:
                    threshold = int(row[9]) if row[9] else 10
                except (ValueError, TypeError):
                    threshold = 10

                pulled_items.append({
                    "item_id": row[0],
                    "item_display_name": row[1],
                    "item_name": row[2] or row[1],
                    "item_number": row[3],
                    "vehicle_model": row[4],
                    "source_brand": row[5] or 'Unknown',
                    "category": row[6] or 'Uncategorized',
                    "unit_value": unit_val,
                    "current_stock_qty": stock_qty,
                    "low_stock_threshold": threshold,
                    "status": row[10] or 'active',
                    "updated_at": row[11] or '',
                    "sync_status": 'synced'
                })

        return jsonify({
            "success": True,
            "pulledItems": pulled_items,
            "message": "Sync completed successfully"
        })

    except Exception as e:
        print(f"Sync Error: {str(e)}")
        return jsonify({"success": False, "message": str(e)}), 500

if __name__ == '__main__':
    app.run(port=5000, debug=True)
